---
import Footer from '../components/global/Footer.astro';
import { ViewTransitions } from 'astro:transitions';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Mira nuestros nuevos productos Fitness & skin Care" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-[#3E433E] antialiased">
    <slot />
    <Footer />
  </body>
</html>

<style>
  *{
    scroll-behavior: smooth;
  }
</style>
